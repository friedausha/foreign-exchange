version: "3"
web:
  build: .
  volumes:
    - .:/foreign-exchange
  ports:
    - "3000:3000"
  links:
    - db
  env_file:
    - '.env.web'
  depends_on:
       - mysql
db:
  image: library/mysql:5.7
  ports:
    - "13306:3306"
  volumes:
    - ./db:/var/lib/mysql
  environment:
    - MYSQL_ROOT_PASSWORD=namamu
    - MYSQL_USER=user
    - MYSQL_PASSWORD=test
  expose:
    - '3306'
